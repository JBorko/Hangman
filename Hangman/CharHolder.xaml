<UserControl x:Class="Hangman.CharHolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hangman"
             mc:Ignorable="d" d:DesignWidth="20" Height="31">

    <StackPanel Orientation="Vertical">
        <Label Content="A" Padding="0" Margin="0" Grid.Row="0" Name="lblCharHolder" Width="20"/>
        <Label Content="_" Padding="0" Grid.Row="1" FontWeight="Bold" Width="20"/>
    </StackPanel>
</UserControl>
